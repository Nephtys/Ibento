<!DOCTYPE html>
<html>
  <head>
    <title>Ibento</title>
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/ico" />
    <%= stylesheet_link_tag "reset", "scaffold", "ibento" %>
    <%= javascript_include_tag :defaults, 'prototype' %>

    <%= csrf_meta_tag %>

  </head>
  <body>
    <div id="header">
      <% if @current_user %>
        <div id="current_user">
          You are logged as <%=  @current_user.first_name %> <%= @current_user.last_name %>.
          <%= link_to 'Logout', logout_path %>
        </div>
      <% end %>
      <div id="flashes">
        <% if flash[:notice] %>
          <span id="flash_notice"><%= flash[:notice] %></span>
        <% end %>
        <% if flash[:error] %>
          <span id="flash_error"><%= flash[:error] %></span>
        <% end %>
      </div>
      <div id="header_logo">
        <%= link_to image_tag("ibento.png", :alt => 'Ibento logo'), home_path %>
      </div>
    </div>
    <div id="content">

      <div id="navigation">
        <ul>
          <%= yield :navigation %>
        </ul>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
      <div id="page">
        <%= yield %>
      </div>
    </div>
    <div id="footer">

    </div>
  </body>
</html>
