<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>First name</th>
    <th>Last name</th>
    <th colspan="3">Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= link_to 'Show', user, :class => 'show' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class => 'edit' %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :class => 'delete' %></td>
  </tr>
<% end %>
</table>



<%= link_to 'New User', new_user_path, :class => 'button' %>
